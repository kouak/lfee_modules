<% content_for :title do %>
Promotions ICNA
<% end %>

<table>
  <tr>
    <th>Promotion</th>
    <th>Affectation</th>
  </tr>

<% @promotions.each do |promotion| %>
  <tr>
    <td><%=h promotion.name %></td>
    <td><%=h promotion.affectation %></td>
    <td><%= link_to 'Afficher', promotion %></td>
    <td><%= link_to 'Editer', edit_promotion_path(promotion) %></td>
    <td><%= link_to 'Supprimer', promotion, :confirm => 'Etes-vous sûr?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Créer une promotion', new_promotion_path %>