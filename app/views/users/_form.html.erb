<% semantic_form_for(@user) do |form| %>
    <% form.inputs do %>
      <%= form.input :username, :label => 'Username' %>
      <%= form.input :nom, :label => 'Nom' %>
      <%= form.input :prenom, :label => 'Prenom' %>
      <%= form.input :email, :label => 'Email' %>
      <%= form.input :promotion, :label => 'Promotion', :include_blank => 'Ma promotion n\'existe pas ?'%>
      <%= form.input :equipe, :label => 'Equipe', :include_blank => false %>
      <%= form.input :password, :label => 'Password' %>
      <%= form.input :password_confirmation, :label => 'Confirmation' %>
      <%= form.input :role, :as => :select, :include_blank => false %>
    <% end %>
    <%= form.buttons %>
<% end %>